[init]
	defaultBranch = main
[user]
	name = EmmetZ
	email = Emmet_Z@outlook.com

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[include]
    path = /home/baiyx/.config/delta/catppuccin.gitconfig

[delta]
    features = catppuccin-macchiato
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    line-numbers = true
    side-by-side = true

[merge]
    conflictstyle = zdiff3
